<!-- views/index.handlebars -->
<div class="container my-5 p-3"
  style="background-color:#EBEBE3; border: 1px solid grey; border-radius: 5px; box-shadow: 2px 2px 10px grey;">
  <div class="d-grid gap-2 mt-2">
    <form action="/" method="POST">
      <select name="costCategory" class="form-select" aria-label="Default select example" onchange="this.form.submit()">
        <option selected>類別選單</option>
        <option value="家居物業">家居物業</option>
        <option value="交通出行">交通出行</option>
        <option value="休閒娛樂">休閒娛樂</option>
        <option value="餐飲食品">餐飲食品</option>
        <option value="其它">其它</option>
      </select>
    </form>
  </div>
  <div class=" my-3 ">{{> message}}</div>

  <p class="my-2">{{#if category}} {{category}} {{/if}}總金額：</p>
  <p class="fw-bold text-end mx-2" style="font-size:46px; color:#CE8467;">$ {{costs.Total}} 元</p>

  <ul class="list-group">
    {{#each costs}}
    <li class="list-group-item">
      <div class="row">
        <div class="col-auto d-flex me-auto align-items-center" style:"color: blue;">
          <i class="{{this.icon}} mx-1" style="color: rgb(134, 134, 200);"> </i>
          <p class="mb-0 ml-1">{{this.name}}</p>
        </div>
        <div class="col-auto d-flex align-items-center">
          <p class="mx-5">$ {{ this.amount }}元</p>
          <a class="btn btn-outline-primary mx-1" href="./costs/{{ this._id }}/edit">edit</a>
          <form action="./costs/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-danger" type="submit">delete</button>
          </form>
        </div>
        <figcaption class="blockquote-footer mb-0">
          {{this.date}}
        </figcaption>
      </div>
    </li>
    {{/each}}
  </ul>
  <a class="btn btn-primary mt-3 d-grid" href="./costs/new">新增支出</a>
</div>